<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1201"
    tools:context=".PlayButton">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:id="@+id/texts">

        <TextView
            android:id="@+id/sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/righteous_regular"
            android:text="Sensor"
            android:textColor="#fff"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/righteous_regular"
            android:text="'D"
            android:id="@+id/sensord"
            android:layout_toRightOf="@+id/sensor"
            android:textColor="#000"
            android:textSize="40dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logos"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/playbtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="333dp"
        app:srcCompat="@drawable/play4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circular_rel"
        android:fontFamily="@font/righteous_regular"
        android:text="Tips:\n Tap screen to change directions"
        android:textAlignment="center"
        android:textColor="#ff1201"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texts"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="My Highscore: -"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>